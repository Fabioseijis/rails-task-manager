<div class = "container" >
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>All tasks</h1>
        <div class='shadow p-3 mb-2 bg-white rounded'>
          <ul>
            <% @tasks.each do |task| %>
              <div class="card text-white bg-danger mb-3" style="max-width: 100;">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to task.title, task_path(task), class:'link'  %></h5>
                  <p class="card-text">details</p>
                </div>
              </div>
            <% end %>
          </ul>
        </div>
        <%= link_to 'New Task', new_task_path, class:'btn btn-danger' %>
    </div>
  </div>
</div>


