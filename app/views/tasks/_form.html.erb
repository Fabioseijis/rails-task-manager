

<%= form_for @task do |f|  %>

    <div class="form-group">
      <%= f.label :title, class: 'font' %>
      <%= f.text_field :title, class: 'form-control col-sm mb-5', placeholder: 'Write...' %>
    </div>

    <div class="form-group">
      <%= f.label :details, class: 'font' %>
      <%= f.text_area :details, class: 'form-control col-sm mb-5', rows: 5 %>
    </div>

      <div class="form-group">
        <%= f.label :completed, class: 'font' %>
        <select class='form-control col-sm mb-5' id=' exampleFormControlSelect1'>
          <option>True</option>
          <option>False</option>
        </select>
      </div>

    <%= f.submit class: 'btn btn-danger btn-block' %>

<% end %>


